<h1>Listing Analytics</h1>

<a href="<%=new_analytic_path%>" class="btn btn-success"> <span class="glyphicon glyphicon-plus"></span>Register a New Analytic</a>
<br/>
<br/>

<%if @analytics.empty?%>
    Currently no analytics are registered with the system.
<%else%>
    <div class="media">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Location</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @analytics.each do |analytic| %>
            <tr>
              <td><%= analytic.name %></td>
              <td><%= analytic.description %></td>
              <td><%=link_to analytic.location, target:'_blank'%></td>
              <td><%= link_to 'Show', analytic, :class => "btn btn-xs btn-default"%></td>
              <td><%= link_to 'Edit', edit_analytic_path(analytic), :class => "btn btn-xs btn-warning" %></td>
              <td><%= link_to 'Destroy', analytic, method: :delete, :class => "btn btn-xs btn-danger", data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
<%end%>